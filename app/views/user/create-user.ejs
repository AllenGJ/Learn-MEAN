<% include ../partials/header.ejs %>
<div class="well col-md-offset-3 col-md-6">
  <form action="#" method="post" class="form col-md-12 center-block">
    <div class="form-group col-md-12">
      <label class="control-label">Student Name</label>
      <input class="form-control" type="text" name="studentName"/>
    </div>
    <div class="form-group col-md-6">
      <label class="control-label">Class</label>
      <input class="form-control" type="text" name="className"/>
    </div>
    <div class="form-group col-md-6">
      <label class="control-label">Roll number</label>
      <input class="form-control" type="text" name="rollNum"/>
    </div>
    <div class="form-group col-md-12">
      <label class="control-label">Date of Birth</label>
      <input class="form-control" type="text" name="dOb"/>
    </div>
    <div class="form-group col-md-12">
      <label for="isClassLeader" class="control-label">Class Leader? &nbsp;</label>
      <div class="radio-inline"><input type="radio" name="isClassLeader" value="true">No</div>
      <div class="radio-inline"><input type="radio" name="isClassLeader" value="false">Yes</div>
    </div>
    <div class="col-md-12">
      <a href="/" class="btn btn-danger">Cancel</a>
      <button type="submit" class="btn btn-info pull-right">Create</button>
    </div>
  </form>
</div>
<% include ../partials/footer.ejs %>
